<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Create new listing</h3>
            <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="from-label">Title</label>
                    <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
                    <div class="invalid-feedback">Enter valid Title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="from-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter description</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="from-label">Upload Image</label>
                    <input name="listing[image]"  type="file" class="form-control" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="from-label">Price</label>
                        <input name="listing[price]" placeholder="enter price"  class="form-control" required>
                        <div class="invalid-feedback">Enter valid Price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="from-label">Country</label>
                        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
                        <div class="invalid-feedback">Enter valid Country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="from-label">Location</label>
                    <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
                    <div class="invalid-feedback">Enter valid Location</div>
                </div>
                <button class="btn btn-dark add-btn">ADD</button>
                <br>
            </form>
        </div>
    </div>
</body>
